{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [".env*", "apps/web/.env*"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "lint": {
      "dependsOn": ["lint:check"],
      "outputs": []
    },
    "lint:check": {
      "dependsOn": ["^lint:check"],
      "outputs": []
    },
    "lint:fix": {
      "cache": false,
      "outputs": []
    },
    "typecheck": {
      "dependsOn": ["^typecheck"],
      "outputs": []
    }
  }
}
