{
	"extends": "../../tsconfig.base.json",
	"compilerOptions": {
		"baseUrl": ".",
		"plugins": [{ "name": "next" }],
		"paths": {
			"@/*": ["./src/*"],
			"@cortex/shared/*": ["../../packages/shared/src/*"],
			"@cortex/ui/*": ["../../packages/ui/src/*"]
		}
	},
	"include": [
		"next-env.d.ts",
		"**/*.ts",
		"**/*.tsx",
		".next/types/**/*.ts",
		".next/dev/types/**/*.ts"
	],
	"exclude": ["node_modules"]
}
